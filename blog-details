<body>

  <div class="card">
    <button class="close-btn" onclick="goHome()">âœ– Close</button>

    <h1 id="title">Loading...</h1>
    <hr>
    <div id="reply" class="reply-box loading">Loading travel details...</div>
  </div>

  <script>
    function goHome() {
      window.location.href = "index.html";
    }
  
    const params = new URLSearchParams(window.location.search);

    // Get values from URL
    let blogTitle = params.get("blogTitle");

    console.log("Blog Title:", blogTitle);


    if (!blogTitle) {
      document.getElementById("reply").innerText = "No place selected. Go back and click a blog.";
      throw new Error("No blogTitle");
    }

    document.getElementById("title").innerText = blogTitle;

    const API_URL = "https://script.google.com/macros/s/AKfycbw62pPQ9j-L9lxhRae3MS0nfU2TOVyrB_E_2qcYCGwwohgtP07ZCba_KduGoGNpT-ydZA/exec";

    async function fetchBlogDetails() {
      try {
        const url = API_URL + "?place=" + encodeURIComponent(blogTitle);
        const res = await fetch(url);
        const json = await res.json();

        document.getElementById("reply").classList.remove("loading");

        if (json.reply && json.reply.trim() !== "") {
          document.getElementById("reply").innerText = json.reply;
        } else {
          document.getElementById("reply").innerText = "No data found for this place.";
        }

      } catch (e) {
        document.getElementById("reply").innerText = "Failed to load data.";
      }
    }

    fetchBlogDetails();
  </script>


